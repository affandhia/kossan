{
  "extends": [
    "kossan"
  ],
  "parserOptions": {
    "project": "./packages/kossan-design-system/tsconfig.json"
  },
  "rules": {
    "no-relative-import-paths/no-relative-import-paths": [
      "error",
      {
        "allowSameFolder": true,
        "rootDir": "src",
        "prefix": "@"
      }
    ]
  }
}